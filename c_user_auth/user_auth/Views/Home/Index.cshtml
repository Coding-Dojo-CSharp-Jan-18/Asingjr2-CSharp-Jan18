@{
    ViewData["Title"] = "Home Page";
}

<h1>
<a href="/">Register</a> || <a href="login">Login</a>
</h1>

@model user_auth.Models.User

<form asp-action="register" asp-controller="Home">
    <div class="form-group">
        <span asp-validation-for="first"></span>
        <label asp-for="first"></label>
        <input type="text" asp-for="first">
    </div>
    <div class="form-group">
        <span asp-validation-for="last"></span>
        <label asp-for="last"></label>
        <input type="text" asp-for="last">
    </div>
    <div class="form-group">
        <span asp-validation-for="email"></span>
        <label asp-for="email"></label>
        <input type="text" asp-for="email">
    </div>
    <div class="form-group">
        <span asp-validation-for="password"></span>
        <label asp-for="password"></label>
        <input type="text" asp-for="password">
    </div>
    <div class="form-group">
        <span asp-validation-for="confirm"></span>
        <label asp-for="confirm"></label>
        <input type="text" asp-for="confirm">
    </div>
    <input type="submit" value="ADD USER">
</form>