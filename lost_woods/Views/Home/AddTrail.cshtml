<div>
    <h1>ADD NEW TRAIL UNDERLINED</h1>
    <a>GO HOME</a>
</div>
<div class="row">
    <form asp-action="addTrail" asp-controller="Home" method="post">
        <div class="form-group">
            <span asp-validation-for"@name">
            </span>
            <label asp-for="@name"></label>
            <input asp-for="@name" type="text">
        </div>
        <div class="form-group">
            <span asp-validation-for "@desc">
            </span>
            <label asp-for="@desc"></label>
            <input asp-for="@desc" type="text">
        </div>
        <div class="form-group">
            <span asp-validation-for "@len">
            </span>
            <label asp-for="@len"></label>
            <input asp-for="@len" type="text">
        </div>
        <div class="form-group">
            <span asp-validation-for "@elevation">
            </span>
            <label asp-for="@elevation"></label>
            <input asp-for="@elevation" type="text">
        </div>
        <div class="form-group">
            <span asp-validation-for "@longg">
            </span>
            <label asp-for="@longg"></label>
            <input asp-for="@longg" type="text">
        </div>
        <div class="form-group">
            <span asp-validation-for "@lat">
            </span>
            <label asp-for="@lat"></label>
            <input asp-for="@lat" type="text">
        </div>
        <input type="submit" value="ADD TRAIL FRIEND">
    </form>
</div>
