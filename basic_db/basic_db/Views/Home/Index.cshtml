@{
    ViewData["Title"] = "Home Page";
}
<h1>Default Blank Page~</h1>
<p>Get to adding stuff</p>

<hr>

<h2>FIRST QUOTE</h2>
<h2>@ViewBag.First</h2>

<hr>
<h1>ADD QUOTE</h1>
<form action="create" method="post">
    <input type="text" name="author" placeholder="AUTHOR">
    <input type="text" name="content" placeholder="CONTENT">
    <input type="submit" value="ADD QUOTE">
</form>
<hr>
<h1>DELETE QUOTE</h1>
<form action="delete" method="post">
    <input type="text" name="id" placeholder="ID Number">
    <input type="submit" name="DELETE">
</form>
<hr>



<table class="table table-hover">
    <thead>
        <tr>
            <th>id</th>
            <th>author</th>
            <th>content</th>
            <th>created_at</th>
            <th>updated_at</th>
            <th>UPDATE?</th>
        </tr>
    </thead>
    <tbody>
        <!-- need to access using dictionary notation not dot.notation -->
        @foreach (var quote in ViewBag.Quotes)
        {
            <tr>
                <td>@quote["id"]</td>
                <td>@quote["author"]</td>
                <td>@quote["content"]</td>
                <td>@quote["created_at"]</td>
                <td>@quote["updated_at"]</td>
                <td>
                    <a href="show/@quote["id"]">Show</a>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <!-- checking foot which exists as the last row -->
        <td>end</td>
    </tfoot>
</table>