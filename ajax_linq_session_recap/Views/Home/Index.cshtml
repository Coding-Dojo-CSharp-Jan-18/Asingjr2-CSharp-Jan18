@{
    ViewData["Title"] = "Home Page";
}
<script src="site2.js" type="text/javascript"></script>


<div class="container">
    <div>
        <h3>
            <p>SIMPLE APP TO CREATE FOOTBALL TEAMS USING AJAX AND LOCAL DB</p>
            <p>FORM1 using ajax, url param and contructor within route</p>
            <p>FORM2 using ajax, model contruction and validation</p>
        </h3>
    </div>
    <div class="container-fluid">
        <div class="left col-sm-5">
            <div class="row">
                <div>
                    <form id="form" action="create" method="post">
                        <h3>FORM 1</h3>
                    <div class="form form-group">
                        <label for="city">City</label>
                        <input type="text" name="city" placeholder="city">
                    </div>
                    <div class="form form-group">
                        <label for="name">Name</label>
                        <input type="text" name="name" placeholder="name">
                    </div>
                    <div class="form form-group">
                        <label for="superbowls">Sb</label>
                        <input type="text" name="superbowls" placeholder="sb">
                    </div>
                    <button class="btn btn-primary">
                        <input type="submit" value="SUBMIT FORM">
                    </button>
                </form>
            </div>
        </div>
        
        @model ajax_linq_session_recap.Models.Team
        <div class="row">
            <div class="col-sm-5">
                <form id="form" asp-action="create2" asp-controller="Home" >
                    <h3>FORM 2</h3>
                    <div class="form form-group">
                        <span asp-validation-for="city"></span>
                        <label asp-for="city"></label>
                        <input type="text" asp-for="city" placeholder="city">
                    </div>
                    <div class="form form-group">
                        <span asp-validation-for="name"></span>
                        <label asp-for="name"></label>
                        <input type="text" asp-for="name" placeholder="name">
                    </div>
                    <div class="form form-group">
                    <span asp-validation-for="superbowls"></span>
                    <label asp-for="superbowls"></label>
                    <input type="text" asp-for="superbowls" placeholder="sb">
                </div>
                <input type="submit" value="SUBMIT MODEL INFO">
            </form>
            <hr>
            <a href="results"> LINQ RESULTS</a>
        </div>
    </div>
    <div class="col-sm-2"></div>
    </div>
    <div class="right col-sm-5">
        <ul> Basic Session Info
            <li>
                Session Name @ViewBag.Name
            </li>
            <li>
                Session Age @ViewBag.Age
            </li>
        </ul>
        <hr>
    
    </div>
</div>
</div>